<rui:ReactiveWindow
    x:Class="RuiRei.Wpf.Views.SearchView"
    x:TypeArguments="vm:SearchViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rui="http://reactiveui.net"
    xmlns:vm="clr-namespace:RuiRei.Core.ViewModels;assembly=RuiRei.Core"
    mc:Ignorable="d"
    Title="RuiRei Search" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0"
                   FontSize="16" Margin="8 8 0 8"
                   VerticalAlignment="Center" Text="Search: " />

        <TextBox x:Name="SearchBox" Grid.Column="1" Grid.Row="0" 
                 FontSize="16"
                 VerticalAlignment="Center" Margin="8" />

        <ListBox x:Name="KanjiResultsBox" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
    </Grid>
</rui:ReactiveWindow>
