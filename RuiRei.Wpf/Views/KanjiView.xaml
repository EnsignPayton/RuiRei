<rui:ReactiveUserControl
    x:Class="RuiRei.Wpf.Views.KanjiView"
    x:TypeArguments="vm:KanjiViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:rui="http://reactiveui.net"
    xmlns:vm="clr-namespace:RuiRei.Core.ViewModels;assembly=RuiRei.Core"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="BasicInfoBlock"
                   FontWeight="SemiBold" FontSize="10" Foreground="#2b2b2b"
                   HorizontalAlignment="Left" VerticalAlignment="Center" />

        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="ValueBlock"
                       FontWeight="Bold" FontSize="48"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" />

            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="DescriptionBlock" 
                           FontSize="20"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="0 0 0 8" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</rui:ReactiveUserControl>
